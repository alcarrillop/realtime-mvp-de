FROM python:3.11-slim

WORKDIR /app

# Copy source code first
COPY src/ ./src/
COPY pyproject.toml ./

# Install dependencies using pip directly
RUN pip install streamlit kafka-python pandas faker numpy requests

# Set environment variables
ENV PYTHONPATH=/app/src

# Expose Streamlit port
EXPOSE 8501

# Run the Streamlit dashboard
CMD ["streamlit", "run", "src/realtime_mvp/dashboard/app.py", "--server.port=8501", "--server.address=0.0.0.0"]
